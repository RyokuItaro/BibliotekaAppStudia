@model BibliotekaMVCApp.Models.Post.PostEntity

@{
    ViewData["Title"] = "Usuń post";
}

<h1>Usuń</h1>

<h3>Czy napewno chcesz usunąć następujący post?</h3>
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Content)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedOn)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatedOn)
        </dd>
    </dl>
    
    <form asp-action="PostDelete">
        <input type="hidden" asp-for="PostId" />
        <input type="submit" value="Usuń" class="btn btn-danger" /> |
        <a asp-action="ManagePosts">Powrót do listy</a>
    </form>
</div>
