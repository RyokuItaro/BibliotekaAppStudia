@model IEnumerable<BibliotekaMVCApp.Models.Post.PostEntity>

<a asp-action="PostCreate">Dodaj nowy post</a>

@foreach(var item in Model.OrderByDescending(p => p.CreatedOn))
{
    <div class="card margin my-4">
        <div class="card-header">
            <div class="d-flex flex-row">
                <p class="flex-grow-1">@item.Title</p>
                <a asp-action="PostEdit" asp-route-id="@item.PostId" class="p-2">Edytuj</a>
                <a asp-action="PostDelete" asp-route-id="@item.PostId" class="p-2">Usuń</a>
            </div>
        </div>
        <div class="card-body">
            <blockquote class="blockquote mb-0">
                <p>@item.Content</p>
                <footer class="blockquote-footer">@item.CreatedOn.ToString("dd MMM yyyy")</footer>
            </blockquote>
        </div>
    </div>
}