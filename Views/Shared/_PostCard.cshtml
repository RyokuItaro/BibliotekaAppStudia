@using BibliotekaMVCApp.Models.Post
@model PostEntity
    <div class="card margin my-4">
        <div class="card-header">
            @Model.Title
        </div>
        <div class="card-body">
            <blockquote class="blockquote mb-0">
                <p>@Model.Content</p>
                <footer class="blockquote-footer">@Model.CreatedOn.ToString("dd MMM yyyy")</footer>
            </blockquote>
        </div>
    </div>