@model BorrowCartViewModel

<h2>Aktualny koszyk</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                <p>Tytuł</p>
            </th>
            <th>
                <p>Autor</p>
            </th>
            <th>
                <p>Ilość</p>
            </th>
            <th>
                <p>Data zwrotu</p>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var borrowItem in Model.BorrowCart.BorrowCartItems) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => borrowItem.Book.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => borrowItem.Book.AuthorFullname)
            </td>
            <td>
                <input type="number" name="quantity" value="@borrowItem.ItemCount"/>
            </td>
            <td>
                @{
                    string stringForDisplay = DateTime.Now.AddDays(borrowItem.DaysToReturn).ToString("dd.MM.yyyy");
                }
                @Html.DisplayFor(modelItem => stringForDisplay)
            </td>
            
        </tr>
}
    </tbody>
</table>
<a asp-action="ConfirmBorrowing">Wypożycz</a> | 
<a href='javascript:history.go(-1)'>Powrót do listy</a>